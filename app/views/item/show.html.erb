<div class="container">

  <div class="row d-flex">

    <div class="col-md-8">
        <% if @item.picture.attached? %>
          <%= image_tag @item.picture %>
        <% else %>
          <img src="<%= @item.image_url %>", alt= "photo chat", class="img-fluid", size= "1000">
        <% end %>

    </div>

    <div class="col-md-4">
      <h3 class="my-3"><strong><em><%= @item.title %> <i class="fab fa-angellist"></i></em></strong></h3>
      <div class="card-body">
        <p class="card-text"><%= @item.description %></p>
      </div>
      <ul>
        <h5><%= @item.price %>â‚¬</h5>
        <br>
        <% if signed_in? %>
          <%= link_to "Ajouter au panier", edit_cart_path(current_user.cart, @item.id), method: 'get', class: "btn btn-success"%>
        <% end %>
        <% if current_user %>
          <% if current_user.is_admin %>
            <%= link_to "Editer le chaton", edit_item_path(@item.id), method: 'get', class: "btn btn-primary"%>
            <%= link_to "Supprimer le chaton", item_path(@item.id), method: 'delete', class: "btn btn-danger"%>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<%= link_to 'Retour', root_path %>
